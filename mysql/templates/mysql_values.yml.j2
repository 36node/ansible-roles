# 设置参考
# https://github.com/bitnami/charts/blob/master/bitnami/mysql/values.yaml
---
architecture: standalone
global:
  storageClass: "{{ mysql_storage_class }}"
auth:
  rootPassword: "{{ mysql_root_password }}"
primary:
  persistence:
    size: "{{ mysql_storage_size }}"
secondary:
  replicaCount: {{ mysql_replica_count | int }}
  persistence:
    size: "{{ mysql_storage_size }}"
